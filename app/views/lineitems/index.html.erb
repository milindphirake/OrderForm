<h1>Listing lineitems</h1>

<div class="table-responsive">
<table class="table table-hover">
  <thead align="center">
    <tr>
      <th>Name</th>
      <th>Sku</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lineitems.each do |lineitem| %>
      <tr>
        <td><%= lineitem.name %></td>
        <td><%= lineitem.sku %></td>
        <td><%= lineitem.description %></td>
        <td><%= lineitem.quantity %></td>
        <td><%= lineitem.price %></td>
        <td><%= link_to 'Show', lineitem %></td>
        <td><%= link_to 'Edit', edit_lineitem_path(lineitem) %></td>
        <td><%= link_to 'Destroy', lineitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Lineitem', new_lineitem_path %>
